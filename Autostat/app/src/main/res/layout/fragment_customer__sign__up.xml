<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="philricciardi.pace.com.autostat.Customer_Sign_Up$PlaceholderFragment">

    <ImageView
        android:id="@+id/autostat_logo"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src="@drawable/autostat_logo"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autostat_logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/cs_input_name_label"
            android:text="Full Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/mechanic_sign_in"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/cs_input_name"
            android:layout_width="200dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mechanic_sign_in"
            android:layout_toRightOf="@+id/cs_input_name_label"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/cs_input_email_label"
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/cs_input_name"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/cs_input_email"
            android:layout_width="250dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cs_input_name"
            android:layout_toRightOf="@+id/cs_input_email_label"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/cs_vehicle_year_label"
            android:text="Vehicle Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/cs_input_email"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/cs_input_vehicle_year"
            android:layout_width="100dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cs_input_email"
            android:layout_toRightOf="@+id/cs_vehicle_year_label"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/cs_vehicle_make_label"
            android:text="Vehicle Make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/cs_vehicle_year_label"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/cs_input_vehicle_make"
            android:layout_width="200dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cs_vehicle_year_label"
            android:layout_toRightOf="@+id/cs_vehicle_make_label"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/cs_vehicle_model_label"
            android:text="Vehicle Model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/cs_input_vehicle_make"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/cs_input_vehicle_model"
            android:layout_width="200dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cs_input_vehicle_make"
            android:layout_toRightOf="@+id/cs_vehicle_model_label"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/cs_create_customer_account_button"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Create Service Record"
            android:layout_below="@+id/cs_vehicle_model_label"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:onClick="createCustomerServiceRecord"
            />


    </RelativeLayout>


</RelativeLayout>
